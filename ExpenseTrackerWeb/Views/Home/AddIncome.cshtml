@model ExpenseTrackerWeb.Models.AddIncomeViewModel

@{
    var bankOptions = Model.Banks.Select(b => new SelectListItem
            {
                Value = b.Id.ToString(),
                Text = b.Name
            }).ToList();

    var userOptions = Model.Users.Select(b => new SelectListItem
            {
                Value = b.Id.ToString(),
                Text = b.Name
            }).ToList();
}

<h4>Add Income</h4>
<hr />

<div class="row">
    @using (Html.BeginForm("AddIncome", "Home", FormMethod.Post))
    {
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Income.Date, new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.Income.Date, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        @Html.ValidationMessageFor(model => model.Income.Date, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Income.Amount, new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.Income.Amount, "{0:0.00}", new { @class = "form-control", type = "number", step = "0.01" })
                        @Html.ValidationMessageFor(model => model.Income.Amount, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Income.BankId, new { @class = "control-label" })
                        @Html.DropDownListFor(model => model.Income.BankId, bankOptions, "Select a Bank", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Income.BankId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Income.UserId, new { @class = "control-label" })
                        @Html.DropDownListFor(model => model.Income.UserId, userOptions, "Select a User", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Income.UserId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Income.Comment, new { @class = "control-label" })
                        @Html.TextAreaFor(model => model.Income.Comment, new { @class = "form-control", rows = "4" })
                        @Html.ValidationMessageFor(model => model.Income.Comment, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-4">
                    <!-- Empty column for spacing -->
                </div>
            </div>

            <div class="form-group text-center mt-4">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </div>
    }
</div>

<hr />

<h4>Income List</h4>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Date</th>
            <th>Bank Name</th>
            <th>Amount</th>
            <th>Comment</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.DtoIncome != null && Model.DtoIncome.Any())
        {
            foreach (var income in Model.DtoIncome)
            {
                <tr>
                    <td>@income.Date.ToString("yyyy-MM-dd")</td>
                    <td>@income.BankName</td>
                    <td>@income.Amount.ToString("C")</td>
                    <td>@income.Comment</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No income records found.</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
